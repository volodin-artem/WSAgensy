<Window x:Class="rand.Pages.AddNewSale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rand.Pages"
        mc:Ignorable="d"
        Title="AddNewSale" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <ComboBox IsEditable="True" IsReadOnly="False" Text="Выберите продукт" Name="cbProducts" DisplayMemberPath="Name"/>
            <TextBlock>Введите количество товара</TextBlock>
            <TextBox Name="tbQuantity" PreviewTextInput="tbQuantity_PreviewTextInput"/>
            <Button Name="buttonAdd" Click="buttonAdd_Click">Добавить</Button>
        </StackPanel>
    </Grid>
</Window>
